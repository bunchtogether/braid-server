{
  "name": "@bunchtogether/braid-server",
  "version": "1.0.10",
  "main": "dist/index.js",
  "repository": "https://github.com/bunchtogether/braid-server.git",
  "author": "johnwehr@bunchtogether.com",
  "scripts": {
    "build": "rm -rf ./dist; flow-remove-types ./src --out-dir ./dist && flow-copy-source ./src ./dist",
    "flow-typed": "./node_modules/.bin/flow-typed install --overwrite",
    "test": "yarn lint && yarn test:js",
    "test:js": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles tests",
    "lint": "npm run lint:js && npm run lint:flow",
    "lint:js": "eslint -c ./.eslintrc --no-eslintrc --fix --cache .",
    "lint:flow": "flow --show-all-errors",
    "coverage": "codecov",
    "start-pre-commit": "git stash -q --keep-index",
    "end-pre-commit": "git add -u && git stash pop -q",
    "documentation": "documentation readme src/index.js --section='API'",
    "benchmark": "NODE_ENV=production flow-node --prof tests/benchmark.js && node --prof-process $(ls -tr isolate-* | tail -n1) && rm -rf isolate-*"
  },
  "pre-commit": [
    "lint",
    "start-pre-commit",
    "build",
    "documentation",
    "end-pre-commit"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "src/**/*.js"
    ],
    "transform": {
      "^.+\\.js(?:\\.flow)?$": "jest-flow-transform"
    }
  },
  "devDependencies": {
    "@bunchtogether/braid-client": "^1.0.10",
    "babel-eslint": "^9.0.0",
    "codecov": "^3.2.0",
    "cross-env": "^5.2.0",
    "deepstream.io": "https://github.com/deepstreamIO/deepstream.io.git#3.2.2",
    "deepstream.io-client-js": "https://github.com/deepstreamIO/deepstream.io-client-js.git#v2.3.0",
    "documentation": "^9.3.0",
    "eslint": "^5.14.1",
    "eslint-config-bunchtogether": "^1.1.6",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-flowtype-errors": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "expect": "^24.1.0",
    "flow-bin": "^0.93.0",
    "flow-copy-source": "^2.0.3",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.5.1",
    "jest": "^24.1.0",
    "jest-diff": "^24.0.0",
    "jest-flow-transform": "^1.0.1",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "@bunchtogether/braid-messagepack": "1.0.10",
    "@bunchtogether/hash-object": "^1.0.2",
    "colors": "^1.3.3",
    "directed-graph-map": "1.2.5",
    "farmhash": "^2.1.0",
    "ip-address": "^5.8.9",
    "lodash": "^4.17.11",
    "logform": "^2.1.2",
    "lru-cache": "^5.1.1",
    "nanomatch": "^1.2.13",
    "observed-remove": "2.2.2",
    "p-queue": "^4.0.0",
    "uWebSockets.js": "uNetworking/uWebSockets.js#v15.8.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "ws": "^6.2.0"
  }
}
