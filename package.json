{
  "name": "@bunchtogether/braid-server",
  "version": "1.2.9",
  "main": "dist/index.js",
  "repository": "https://github.com/bunchtogether/braid-server.git",
  "author": "johnwehr@bunchtogether.com",
  "scripts": {
    "build": "rm -rf ./dist; flow-remove-types ./src --out-dir ./dist && flow-copy-source ./src ./dist",
    "flow-typed": "./node_modules/.bin/flow-typed install --overwrite",
    "test": "yarn lint && yarn test:js",
    "test:js": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles tests",
    "lint": "npm run lint:js && npm run lint:flow",
    "lint:js": "eslint -c ./.eslintrc --no-eslintrc --fix --cache .",
    "lint:flow": "flow --show-all-errors",
    "coverage": "codecov",
    "documentation": "documentation readme dist/index.js --section='API'",
    "benchmark": "NODE_ENV=production flow-node --prof tests/benchmark.js && node --prof-process $(ls -tr isolate-* | tail -n1) && rm -rf isolate-*",
    "prepare": "husky install"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "src/**/*.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-transform-flow-strip-types": "^7.16.0",
    "@bunchtogether/braid-client": "1.2.9",
    "babel-eslint": "^10.1.0",
    "codecov": "^3.8.2",
    "cross-env": "^7.0.3",
    "documentation": "^13.2.5",
    "eslint": "^8.4.1",
    "eslint-config-bunchtogether": "^1.1.6",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-flowtype-errors": "^4.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "expect": "^27.4.2",
    "flow-bin": "^0.125.1",
    "flow-copy-source": "^2.0.9",
    "flow-remove-types": "^2.166.1",
    "flow-typed": "^3.5.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "jest-diff": "^27.4.2",
    "uWebSockets.js": "https://github.com/uNetworking/uWebSockets.js/archive/v20.5.0.tar.gz"
  },
  "dependencies": {
    "@bunchtogether/braid-messagepack": "1.2.9",
    "@bunchtogether/hash-object": "^1.0.3",
    "colors": "^1.4.0",
    "directed-graph-map": "1.2.8",
    "farmhash": "^3.2.2",
    "ip-address": "8.1.0",
    "lodash": "^4.17.21",
    "logform": "^2.3.0",
    "lru-cache": "^6.0.0",
    "msgpackr-extract": "^1.0.16",
    "observed-remove": "2.2.27",
    "p-queue": "^6.6.2",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "ws": "^7.5.5"
  }
}
